<mujoco model="actuation_robot">
  <option gravity="0 0 -9.81" integrator="RK4" timestep="0.002"/>

  <default>
    <geom rgba="0.2 0.6 0.8 1" density="800"/>
    <joint type="hinge" axis="0 1 0" limited="true" damping="0.6"/>
  </default>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2="0.6 0.8 1" width="256" height="256"/>
  </asset>

  <worldbody>
    <light pos="0 0 2" dir="0 0 -1" diffuse="1 1 1"/>
    <geom name="ground" type="plane" size="2 2 0.1" rgba="0.95 0.95 0.95 1"/>

    <body name="base" pos="0 0 0.25">
      <joint name="shoulder" range="-90 90"/>
      <geom type="capsule" size="0.04" fromto="0 0 0  0.30 0 0"/>

      <body name="link1_flex" pos="0.30 0 0">
        <joint name="flex1" range="-5 5" damping="0.2" stiffness="10"/>
        <geom type="capsule" size="0.035" rgba="0.8 0.4 0.2 1" fromto="0 0 0  0.25 0 0"/>

        <body name="link2" pos="0.25 0 0">
          <joint name="elbow" range="-90 90"/>
          <geom type="capsule" size="0.03" fromto="0 0 0  0.25 0 0"/>

          <body name="link2_flex" pos="0.25 0 0">
            <joint name="flex2" range="-5 5" damping="0.2" stiffness="8"/>
            <geom type="capsule" size="0.025" rgba="0.2 0.8 0.3 1" fromto="0 0 0  0.20 0 0"/>
            <site name="tip" pos="0.20 0 0" size="0.01"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="shoulder_motor" joint="shoulder" gear="50" ctrllimited="true" ctrlrange="-1 1"/>
    <motor name="elbow_motor" joint="elbow" gear="50" ctrllimited="true" ctrlrange="-1 1"/>
  </actuator>
</mujoco>
