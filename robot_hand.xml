<mujoco model="robot_hand">
  <compiler angle="radian"/>

  <default>
    <geom rgba="0.8 0.6 0.4 1" condim="3" friction="1 0.5 0.5"/>
    <joint damping="1.5" armature="0.02" limited="true"/>
    <motor ctrllimited="true" ctrlrange="-2 2"/>
  </default>

  <option timestep="0.002" integrator="RK4"/>

  <visual>
    <map znear="0.01" zfar="5"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.9 0.95 1" rgb2="0.2 0.3 0.5" width="256" height="256"/>
  </asset>

  <worldbody>
    <light pos="0 0 2" dir="0 0 -1" diffuse="1 1 1"/>
    <camera name="main" pos="0.35 -0.7 0.55" xyaxes="1 0 0 0 0 1"/>
    <geom name="floor" type="plane" size="1 1 0.1" rgba="0.95 0.95 0.95 1"/>

    <body name="hand" pos="0 0 0.9">
      <geom name="palm" type="box" size="0.035 0.05 0.015" rgba="0.7 0.7 0.7 1"/>

      <body name="index_base" pos="0.035 -0.02 0">
        <joint name="index_mcp" type="hinge" axis="0 1 0" range="0 2.0"/>
        <geom type="capsule" size="0.009" fromto="0 0 0 0.04 0 0"/>
        <body name="index_mid" pos="0.04 0 0">
          <joint name="index_pip" type="hinge" axis="0 1 0" range="0 2.1"/>
          <geom type="capsule" size="0.008" fromto="0 0 0 0.03 0 0"/>
          <body name="index_tip" pos="0.03 0 0">
            <joint name="index_dip" type="hinge" axis="0 1 0" range="0 1.8"/>
            <geom type="capsule" size="0.007" fromto="0 0 0 0.025 0 0"/>
            <site name="index_tip_site" pos="0.025 0 0" size="0.004"/>
          </body>
        </body>
      </body>

      <body name="middle_base" pos="0.035 0 0">
        <joint name="middle_mcp" type="hinge" axis="0 1 0" range="0 2.0"/>
        <geom type="capsule" size="0.01" fromto="0 0 0 0.043 0 0"/>
        <body name="middle_mid" pos="0.043 0 0">
          <joint name="middle_pip" type="hinge" axis="0 1 0" range="0 2.1"/>
          <geom type="capsule" size="0.009" fromto="0 0 0 0.032 0 0"/>
          <body name="middle_tip" pos="0.032 0 0">
            <joint name="middle_dip" type="hinge" axis="0 1 0" range="0 1.8"/>
            <geom type="capsule" size="0.008" fromto="0 0 0 0.027 0 0"/>
            <site name="middle_tip_site" pos="0.027 0 0" size="0.004"/>
          </body>
        </body>
      </body>

      <body name="ring_base" pos="0.035 0.02 0">
        <joint name="ring_mcp" type="hinge" axis="0 1 0" range="0 2.0"/>
        <geom type="capsule" size="0.009" fromto="0 0 0 0.038 0 0"/>
        <body name="ring_mid" pos="0.038 0 0">
          <joint name="ring_pip" type="hinge" axis="0 1 0" range="0 2.1"/>
          <geom type="capsule" size="0.008" fromto="0 0 0 0.028 0 0"/>
          <body name="ring_tip" pos="0.028 0 0">
            <joint name="ring_dip" type="hinge" axis="0 1 0" range="0 1.8"/>
            <geom type="capsule" size="0.007" fromto="0 0 0 0.023 0 0"/>
            <site name="ring_tip_site" pos="0.023 0 0" size="0.004"/>
          </body>
        </body>
      </body>

      <body name="pinky_base" pos="0.035 0.04 0">
        <joint name="pinky_mcp" type="hinge" axis="0 1 0" range="0 2.0"/>
        <geom type="capsule" size="0.008" fromto="0 0 0 0.032 0 0"/>
        <body name="pinky_mid" pos="0.032 0 0">
          <joint name="pinky_pip" type="hinge" axis="0 1 0" range="0 2.1"/>
          <geom type="capsule" size="0.007" fromto="0 0 0 0.024 0 0"/>
          <body name="pinky_tip" pos="0.024 0 0">
            <joint name="pinky_dip" type="hinge" axis="0 1 0" range="0 1.8"/>
            <geom type="capsule" size="0.006" fromto="0 0 0 0.02 0 0"/>
            <site name="pinky_tip_site" pos="0.02 0 0" size="0.004"/>
          </body>
        </body>
      </body>

      <body name="thumb_base" pos="0.02 -0.06 0" euler="0 0 -0.6">
        <joint name="thumb_mcp" type="hinge" axis="0 1 0" range="0 1.6"/>
        <geom type="capsule" size="0.01" fromto="0 0 0 0.035 0 0"/>
        <body name="thumb_mid" pos="0.035 0 0">
          <joint name="thumb_pip" type="hinge" axis="0 1 0" range="0 1.6"/>
          <geom type="capsule" size="0.009" fromto="0 0 0 0.025 0 0"/>
          <body name="thumb_tip" pos="0.025 0 0">
            <joint name="thumb_dip" type="hinge" axis="0 1 0" range="0 1.4"/>
            <geom type="capsule" size="0.008" fromto="0 0 0 0.02 0 0"/>
            <site name="thumb_tip_site" pos="0.02 0 0" size="0.004"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="motor_index_mcp" joint="index_mcp" gear="18"/>
    <motor name="motor_index_pip" joint="index_pip" gear="16"/>
    <motor name="motor_index_dip" joint="index_dip" gear="12"/>

    <motor name="motor_middle_mcp" joint="middle_mcp" gear="20"/>
    <motor name="motor_middle_pip" joint="middle_pip" gear="18"/>
    <motor name="motor_middle_dip" joint="middle_dip" gear="14"/>

    <motor name="motor_ring_mcp" joint="ring_mcp" gear="18"/>
    <motor name="motor_ring_pip" joint="ring_pip" gear="16"/>
    <motor name="motor_ring_dip" joint="ring_dip" gear="12"/>

    <motor name="motor_pinky_mcp" joint="pinky_mcp" gear="16"/>
    <motor name="motor_pinky_pip" joint="pinky_pip" gear="14"/>
    <motor name="motor_pinky_dip" joint="pinky_dip" gear="10"/>

    <motor name="motor_thumb_mcp" joint="thumb_mcp" gear="16"/>
    <motor name="motor_thumb_pip" joint="thumb_pip" gear="14"/>
    <motor name="motor_thumb_dip" joint="thumb_dip" gear="10"/>
  </actuator>
</mujoco>
